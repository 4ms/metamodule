{
  "version": 2,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 19,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "base",
      "description": "Common settings for all projects",
      "generator": "Ninja",
      "binaryDir": "build",
      "hidden": false,
      "cacheVariables": {
        "TOOLCHAIN_BASE_DIR":{
          "type": "FILEPATH",
          "value": ""
        },
        "CMAKE_TOOLCHAIN_FILE": {
          "type": "STRING",
          "value": "cmake/arm-none-eabi-gcc.cmake"
        }
      }
    },
    {
      "name": "full",
      "inherits": "base",
      "cacheVariables": {
        "ENABLE_WIFI_BRIDGE":{
          "type": "BOOL",
          "value": "ON"
        }
      }
    },
    {
      "name": "dyn-plugins",
      "inherits": "full",
      "cacheVariables": {
        "BUILD_DYN_PLUGIN_AudibleInstruments": { "type": "BOOL", "value": "ON" },
        "BUILD_DYN_PLUGIN_Befaco":             { "type": "BOOL", "value": "ON" }, 
        "BUILD_DYN_PLUGIN_hetrickcv":          { "type": "BOOL", "value": "ON" },
        "BUILD_DYN_PLUGIN_nonlinearcircuits":  { "type": "BOOL", "value": "ON" },
        "BUILD_DYN_PLUGIN_eightfold":          { "type": "BOOL", "value": "ON" }
      }
    },
    {
      "name": "befaco",
      "inherits": "full",
      "cacheVariables": {
        "BUILD_DYN_PLUGIN_AudibleInstruments": { "type": "BOOL", "value": "ON" },
        "BUILD_DYN_PLUGIN_hetrickcv":          { "type": "BOOL", "value": "ON" },
        "BUILD_DYN_PLUGIN_nonlinearcircuits":  { "type": "BOOL", "value": "ON" },
        "BUILD_DYN_PLUGIN_eightfold":          { "type": "BOOL", "value": "ON" }
      }
    },
    {
      "name": "audible",
      "inherits": "full",
      "cacheVariables": {
        "BUILD_DYN_PLUGIN_Befaco":             { "type": "BOOL", "value": "ON" }, 
        "BUILD_DYN_PLUGIN_hetrickcv":          { "type": "BOOL", "value": "ON" },
        "BUILD_DYN_PLUGIN_nonlinearcircuits":  { "type": "BOOL", "value": "ON" },
        "BUILD_DYN_PLUGIN_eightfold":          { "type": "BOOL", "value": "ON" }
      }
    },
    {
      "name": "pcb-p12",
      "description": "PCB p11 with mods (aka p12)",
      "inherits": "base",
      "cacheVariables": {
        "METAMODULE_PCB_VERSION": "12"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "base",
      "configurePreset": "base"
    },
    {
      "name": "full",
      "configurePreset": "full"
    },
    {
      "name": "dyn-plugins",
      "configurePreset": "dyn-plugins"
    }
  ]
}
