{
  "version": 2,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 19,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "base",
      "description": "Common settings for all projects",
      "generator": "Ninja",
      "binaryDir": "build",
      "hidden": false,
      "cacheVariables": {
        "TOOLCHAIN_BASE_DIR":{
          "type": "FILEPATH",
          "value": ""
        },
        "CMAKE_TOOLCHAIN_FILE": {
          "type": "STRING",
          "value": "cmake/arm-none-eabi-gcc.cmake"
        }
      }
    },
    {
      "name": "full",
      "inherits": "base"
    },
    {
      "name": "uart-log",
      "inherits": "full",
      "cacheVariables": {
        "CONSOLE_USE_USB": { "type": "BOOL", "value": "OFF" },
        "LOG_LEVEL": { "type": "STRING", "value": "DEBUG" }
      }
    },
    {
      "name": "usb-log",
      "inherits": "full",
      "cacheVariables": {
        "CONSOLE_USE_USB": { "type": "BOOL", "value": "ON" },
        "LOG_LEVEL": { "type": "STRING", "value": "DEBUG" }
      }
    }
  ],
  "buildPresets": [
    {
      "name": "base",
      "configurePreset": "base"
    },
    {
      "name": "full",
      "configurePreset": "full"
    },
    {
      "name": "usb-log",
      "configurePreset": "usb-log"
    },
    {
      "name": "uart-log",
      "configurePreset": "uart-log"
    }
  ]
}
